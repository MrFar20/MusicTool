<!--          android:background="@color/color_netease_red"-->
<!--          android:layout_marginTop="5dp"-->
<!--          android:layout_marginBottom="5dp"/>-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"/>
