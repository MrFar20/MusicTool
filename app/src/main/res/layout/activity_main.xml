<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
    >
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/toolbar"
                android:gravity="center">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/icon_menu"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/menu_red"
                        android:padding="10px"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal" android:layout_marginEnd="-1dp"
                        android:layout_alignEnd="@+id/toolbar_menu">
                    <TextView
                            android:textColor="@color/color_text_lighter"
                            android:textSize="@dimen/activity_main_toolbar_textsize"
                            android:text="@string/main_activity_toolbar_item1"
                            tools:text="@string/main_activity_toolbar_item1"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_mine"/>
                    <TextView
                            android:textColor="@color/color_text_lighter"
                            android:textSize="@dimen/activity_main_toolbar_textsize"
                            android:text="@string/main_activity_toolbar_item2"
                            tools:text="@string/main_activity_toolbar_item2"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_music"/>
                    <TextView
                            android:textColor="@color/color_text_lighter"
                            android:textSize="@dimen/activity_main_toolbar_textsize"
                            android:text="@string/main_activity_toolbar_item3"
                            tools:text="@string/main_activity_toolbar_item3"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/tv_dis"/>
                </LinearLayout>
                <ImageView
                        android:src="@drawable/music_logo_red"
                        android:layout_marginEnd="0dp"
                        android:padding="8dp"
                         android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/toolbar_menu" android:layout_marginTop="0dp"
                        android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="43dp" tools:ignore="MissingConstraints">
        </android.support.v4.view.ViewPager>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/activity_main_player_height"
                      android:background="@drawable/activity_main_bottom_player"
                      android:gravity="center_vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:src="@drawable/album_img"
            />
            <LinearLayout android:layout_width="247dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1">

            </LinearLayout>

            <LinearLayout android:layout_width="99dp"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:gravity="right"
                          android:padding="5dp">
                <ImageView android:layout_width="45dp"
                           android:layout_marginRight="5dp"
                           android:layout_height="45dp"
                           android:src="@drawable/play_red"
                           android:layout_gravity="center_vertical"/>
                <ImageView android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:src="@drawable/nextsong_red"
                           android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <android.support.design.widget.NavigationView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:menu="@menu/menu"
            app:headerLayout="@layout/menu_header"/>


</android.support.v4.widget.DrawerLayout>